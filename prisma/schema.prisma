generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Task {
  id       String    @id @default(uuid()) @map("_id") @db.ObjectId
  title    String
  description     String
  status      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}